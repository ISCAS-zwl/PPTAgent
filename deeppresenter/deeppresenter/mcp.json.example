[
    {
        "name": "any2markdown",
        "description": "File conversion tools",
        "command": "uv",
        "args": [
            "run",
            "$PACKAGE_DIR/tools/any2markdown.py",
            "$WORKSPACE"
        ],
        "env": {
            "MINERU_API_KEY": "your_mineru_api_key_for_online_mode"
        }
    },
    {
        "name": "task",
        "description": "Task management tools",
        "command": "uv",
        "args": [
            "run",
            "$PACKAGE_DIR/tools/task.py",
            "$WORKSPACE"
        ],
        "env": {
            "CONFIG_FILE": "$CONFIG_FILE"
        }
    },
    {
        "name": "deeppresenter",
        "description": "Artifact inspection tools for deeppresenter",
        "command": "uv",
        "args": [
            "run",
            "$PACKAGE_DIR/tools/reflect.py",
            "$WORKSPACE"
        ],
        "env": {
            "CONFIG_FILE": "$CONFIG_FILE"
        }
    },
    {
        "name": "tool_agents",
        "description": "LLM-powered tool agents",
        "command": "uv",
        "args": [
            "run",
            "$PACKAGE_DIR/tools/tool_agents.py",
            "$WORKSPACE"
        ],
        "env": {
            "CONFIG_FILE": "$CONFIG_FILE"
        }
    },
    {
        "name": "research",
        "description": "Academic paper search tools",
        "command": "uv",
        "args": [
            "run",
            "$PACKAGE_DIR/tools/research.py",
            "$WORKSPACE"
        ]
    },
    {
        "name": "search",
        "description": "Web search tools",
        "command": "uv",
        "args": [
            "run",
            "$PACKAGE_DIR/tools/search.py",
            "$WORKSPACE"
        ],
        "env": {
            "TAVILY_API_KEY": "your_key"
        }
    },
    {
        "name": "pptagent",
        "description": "https://github.com/icip-cas/PPTAgent",
        "command": "uv",
        "args": ["run", "pptagent-mcp"],
        "env": {
            "PPTAGENT_MODEL": "glm-4.6",
            "PPTAGENT_API_KEY": "your_key",
            "PPTAGENT_API_BASE": "https://open.bigmodel.cn/api/paas/v4/"
        }
    },
    {
        "name": "sandbox",
        "description": "https://github.com/wonderwhy-er/DesktopCommanderMCP",
        "command": "docker",
        "args": [
            "run",
            "--security-opt",
            "seccomp=unconfined",
            "--init",
            "--name",
            "$WORKSPACE_ID",
            "-i",
            "--rm",
            "-v",
            "$HOST_WORKSPACE:$WORKSPACE",
            "-w",
            "$WORKSPACE",
            "deeppresenter-sandbox:0.1.0"
        ]
    }
]
